<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_productCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        style="@style/CardViewStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/overflow_product_cart"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/ic_menu_dots" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_productCart"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo_horizontal"
                    android:adjustViewBounds="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="18dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_productCart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="3dp"
                        android:text="@string/name_product"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/descr_productCart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="3dp"
                        android:text="@string/lorem_ipsum"
                        android:textSize="14dp"
                        android:maxLines="2"
                        android:ellipsize="end"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:id="@+id/qty_productCart"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginBottom="10dp"
                            android:text="0 UND"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"
                            />
                        <TextView
                            android:id="@+id/price_productCart"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="$ 0.0"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorGray"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="10dp"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>