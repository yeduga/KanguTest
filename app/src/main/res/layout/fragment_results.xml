<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.virtualtec.kangutest.ResultsFragment">

    <LinearLayout
        android:id="@+id/linear_loading_searchResults"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_below="@id/linear_categories">

        <com.virtualtec.kangutest.ClassesCustom.GifView
            android:id="@+id/loading_searchResults"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_info_searchResults"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="18sp"
        android:padding="15dp"
        android:visibility="gone"
        android:layout_below="@id/toolbar"
        android:text="@string/info"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_searchResults"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar" />

</RelativeLayout>